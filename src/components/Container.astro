---
import Photo from "./Photo.astro";
import "../style/fonts.css";
import personal from "../data/personal";
import Navigation from "./Navigation";
---

<section class="flex flex-col md:flex-row md:shadow-2xl mt-3 md:mt-0
    md:h-5/6 md:w-9/12 md:border-slate-300 md:border-solid md:border-2 md:rounded-lg">
  <div class="flex flex-row items-center justify-center md:justify-start mb-4
          md:w-4/12 md:flex-col md:border-t-0 md:border-b-0 md:border-l-0 md:border-r-6 md:border-solid md:border-slate-300 
          md:border-2 md:p-2 md:mb-0">
        <div class="flex items-center justify-center w-20 h-20 rounded-full overflow-hidden
              md:w-64 md:h-64">
            <Photo/>
        </div>
        <div class="flex flex-col items-center">
          <span class="md:pt-2 text-white poppins-light text-lg md:text-xl">IBERSON SILVA CHUMACERO</span>
          <span class="md:pb-2 text-white poppins-light text-lg md:text-xl">Frontend Developer</span>
          <div class="flex">
            <button class="flex w-auto items-center bg-[#8996a8] text-sm md:text-[16px] hover:bg-white mr-1 md:m-2 px-2 py-1 rounded-full text-white 
              drop-shadow-2xl hover:text-[#505862]">Curriculum Vitae
            </button>
            <button class="flex w-auto items-center bg-[#8996a8] text-sm hover:bg-white md:m-2 px-2 py-1 rounded-full text-white 
              drop-shadow-2xl hover:text-[#505862] md:hidden">
              About Me
            </button>
          </div>
        </div>
        <div class="text-white text-justify mt-2 hidden md:inline">
          <p class="text-[15px] font-semibold">{personal.title}</p>
          <p class="text-sm mt-2">{personal.description}</p>
        </div>
  </div>
  <Navigation client:only/>
</section>