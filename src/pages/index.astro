---
import Container from '../components/Container.astro';
import Networks from '../components/Networks.astro';
import Layout from '../layouts/Layout.astro';
import personal from "../data/personal";
import Footer from "../components/footer.astro";
---

<Layout>
	<div class="flex-row justify-end hidden md:flex md:h-5/6 md:flex-col">
		{personal.networks.map((network)=>(
			<Networks icon={network.icon} link={network.link}/>
		))}
	</div>
	<Container/>	
    <section class="text-white text-center mb-6 mt-5 inline md:hidden mx-3">
	  <span class="text-white text-center text-xl md:text-2xl font-normal">About Me</span>
      <p class="text-[15px] font-semibold text-justify mt-3">{personal.title}</p>
      <p class="text-sm mt-2 text-justify">{personal.description}</p>
    </section>
	<Footer/>
</Layout>